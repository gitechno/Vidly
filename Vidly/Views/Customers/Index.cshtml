@model IEnumerable<Vidly.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
@if (Model.Any())
{
    <table>
        <thead>
        <tr>
            <th>Customers</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var customer in Model)
        {
            
       
            <tr>
                <td>@Html.ActionLink(customer.Name, "Info", "Customers", new {id = customer.Id}, null)</td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>We don't have customers yet!</p>
}

